<Page x:Class="EkzamenUtkin.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EkzamenUtkin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid Background="Wheat" MinHeight="300" MinWidth="300">
        <StackPanel Width="250" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,25">
            <Label Content="Введите логин"/>
            <TextBox Height="23" TextWrapping="Wrap" Text="" Margin="0,10,0,0" Name="txbLogin"/>
            <Label Content="Пароль"/>
            <PasswordBox Name="psbPassword"/>
            <StackPanel>
                <Button x:Name="btnToComeIn" Content="Войти" Background="Black" Foreground="White" FontStyle="Italic" Margin="10,10,10,0" Click="btnToComeIn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
